{% extends 'base.html.twig' %}

{% block title %}Pilotos index{% endblock %}

{% block body %}
    <h1>Lista de pilotos de la NANOCUP</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                {# <th>Password</th> #}
                <th>Dorsal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for piloto in pilotos %}
            <tr>
                <td>{{ piloto.id }}</td>
                <td>{{ piloto.name }}</td>
                <td>{{ piloto.email }}</td>
                {# <td>{{ piloto.password }}</td> #}
                <td>{{ piloto.dorsal }}</td>
                <td>
                    <a href="{{ path('app_pilotos_show', {'id': piloto.id}) }}">Ver</a>
                    <a href="{{ path('app_pilotos_edit', {'id': piloto.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No hay pilotos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h5>
    <a href="{{ path('app_pilotos_new') }}">Crear piloto</a>
    </h5>
{% endblock %}
